{
  "compilerOptions": {
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "target": "es2020",
    "types": [
      "node"
    ],
    "strict": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/types"
  ]
}